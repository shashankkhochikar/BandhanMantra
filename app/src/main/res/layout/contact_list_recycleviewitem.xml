<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/org_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/app_min_padding"
    android:weightSum="9">

    <CheckBox
        android:id="@+id/checkboxContact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4" />

    <LinearLayout
        android:id="@+id/linearLayoutContactItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/app_min_margin"
            android:layout_weight="1"
            android:text="Contact Name"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/textViewMob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_min_margin"
            android:layout_weight="1"
            android:text="0"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textStyle="bold"
            android:autoLink="all"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_delcnt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/app_min_margin"
        android:layout_weight="4"
        android:scaleType="centerInside"
        android:src="@drawable/ic_delete"
        android:padding="@dimen/app_min_padding"/>

    <ImageView
        android:id="@+id/img_edtgrp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/app_min_margin"
        android:layout_weight="4"
        android:src="@drawable/ic_edit"
        android:visibility="gone" />
</LinearLayout>

